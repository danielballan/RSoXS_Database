{ "$schema": "http://json-schema.org/schema#",
  "$id": "RSoXS Sample",
  "type": "object",
  "properties": {
    "sample_name": {
      "type": "string"
    },
    "sample_desc": {
      "type": "string"
    },
    "date_created": {
      "type": "string",
      "format": "date"
    },
    "user_id": {
      "type": "number"
    },
    "project_name": {
      "type": "string"
    },
    "institution_id": {
      "type": "number"
    },
    "composition": {
      "type": "array"
    },
    "density": {
      "type": "number"
    },
    "thickness": {
      "type": "number"
    },
    "notes": {
      "type": "string"
    },
    "state": {
      "type": "string",
      "enum": [
        "loaded",
        "fresh",
        "broken",
        "lost",
        "unloaded"
      ]
    },
    "current_bar_id": {
      "type": "number"
    },
    "current_slot_name": {
      "type": "string"
    },
    "past_bar_ids": {
      "type": "array"
    },
    "location_id": {
      "type": "number"
    },
    "priority": {
      "type": "number"
    },
    "history": {
      "type": "array",
      "uniqueItems": true,
      "items": [
        {
          "type": "object",
          "properties": {
            "datetime": {
              "type": "string",
              "format": "date"
            },
            "action": {
              "type": "string"
            }
          }
        }
      ]
    },
    "requests": {
      "type": "array",
      "uniqueItems": true,
      "items": [
        {
          "type": "object",
          "properties": {
            "configuration_id": {
              "type": "number"
            },
            "acquisition_id": {
              "type": "number"
            },
            "exposure_multiple": {
              "type": "number"
            },
            "location_id": {
              "type": "number"
            },
            "started": {
              "type": "boolean"
            },
            "completed": {
              "type": "boolean"
            },
            "analyzed": {
              "type": "boolean"
            },
            "started uid": {
              "type": "number"
            },
            "completed uid": {
              "type": "number"
            },
            "analyzed uid": {
              "type": "number"
            }
          },
          "required": [
            "configuration_id",
            "acquisition_id",
            "completed",
            "completed_uid",
            "started",
            "started_uid",
            "analyzed",
            "analyzed_uid"
          ]
        }
      ]
    }
  },
  "required": [
    "name"
  ]
}
